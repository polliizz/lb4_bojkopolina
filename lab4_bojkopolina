#include <iostream>
using namespace std;

int main() {
int n;
int arr[10] = { 4,8,9,3,2,6,5,1,7,0 };
for (int i = 0; i < n - 1; i++) {
for (int j = 0; j < n - i - 1; j++) {
if (arr[j] > arr[j + 1]) {
cout << "3 максимальні елементи: "
<< arr[0] << ", "
<< arr[1] << ", "
<< arr[2] << endl;
return 0;
			} 
		}
	 }
			
}
